
@{
    ViewData["Title"] = "Car";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-black">Car List</h3>
                    @Html.ActionLink("Add New Car", "Add", "Car", null, new{@class="btn btn-sm btn-primary"})
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-black text-black text-center">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Seating Capacity</th>
                                <th>Engine</th>
                                <th>Fuel Type</th>
                                <th>Passing Year</th>
                                <th>Car Number</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>