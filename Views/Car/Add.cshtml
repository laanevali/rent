@model rent.Models.Car
@{
    ViewData["Title"] = "Add New Car";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center">
                    <h2 class="text-black">Add New Car</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Car/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Brand</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Brand, new{@class="form-contol",placeholder="Enter Brand"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Model</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Model, new{@class="form-contol",placeholder="Enter Model"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Passing Year</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.PassingYear, new{@class="form-contol",placeholder="Enter Passing Year"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Seating Capacity</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.SeatingCapacity, new{@class="form-contol",placeholder="Enter Seating Capacity"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Engine</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Engine, new{@class="form-contol",placeholder="Enter Engine"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Car Number</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.CarNumber, new{@class="form-contol",placeholder="Enter Car Number"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Car Image</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.CarImage, new{@class="form-contol",type="file"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-black">Fuel Type</label>
                            <div class="col-9">
                                <select name="FuelType" class="form-select">
                                    <option value="">Select Fuel Type</option>
                                    <option value="Diesel">Diesel</option>
                                    <option value="Petrol">Petrol</option>
                                    <option value="Electric">Electric</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-sm shadow rounded p-2 btn-dark" type="reset">Clear</button>
                            <button class="btn btn-sm shadow rounded p-2 btn-success" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    function showAlert(){
        if ('@ViewBag.isSaved' == 'True'){
            alert("New Car Successfully added!");
        } 
    }
    $(document).ready(function (){
        showAlert();
    })
</script>