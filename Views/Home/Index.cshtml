@model IEnumerable<rent.Models.Car>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="mt-3 p-3 shadow rounded">
            <div class="carousel slide" id="carouselExampleSlidesOnly" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/carousel/toyota.jpg" class="w-100 d-block" style="height: 650px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/1-Skoda-Kodiaq.jpg" class="w-100 d-block" style="height: 650px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/opgefriste-renault-trafic-2020-970-005.jpeg" class="w-100 d-block" style="height: 650px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div></div>
    <div class="row mt-3">
        @foreach (var item in Model.ToList())
        {
            <div class="col-4">
                <div class="mt-2 p-3 shadow rounded">
                    <div class="card" style="height:400px">
                        <img src="~/images/cars/@item.ImagePath" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="text-info">@item.Brand @item.Model</h5>
                            <p class="card-text">Engine @item.Engine</p>
                            <p class="card-text">Fuel Type @item.FuelType</p>
                            <p class="card-text">Seating Capacity @item.SeatingCapacity</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>